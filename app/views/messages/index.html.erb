<div style="display: inline-block">
<%= octicon_btn('chevron-left', conversations_path) %>
<% if @over_ten %>
  <%= link_to "Show Previous", "?m=all" %>
<% end %>
</div>

<hr>
  <div class="ui segment">
    <% @messages.each do |message| %>
        <% if message.body %>
          <% owner = Owner.find(message.owner_id) %>
          <div class=”item”>
            <div class=”content”>
              <div class=”header”><strong><%= owner.first_name %></strong>     <%= message.message_time %></div>
              <div class=”list”>
                <div class=”item”>
                  <i class="right triangle icon"></i>
                  <%= message.body %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
    <% end %>
  </div>
<hr>
<%= form_for [@conversation, @message], html: { class: "ui reply form" } do |f| %>
  <div class=”field”>
    <%= f.text_area :body, class: "form-control", size: "30x7"%>
  </div>
  <%= f.text_field :owner_id, value: current_owner.id, type: "hidden" %>
  <div style="margin-top: 10px">
    <%= f.submit "Send", class: "btn btn-outline-info btn-sm" %>
  </div>
<% end %>