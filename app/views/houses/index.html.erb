<div class="center">
  <h2>House Market</h2>
  <%= paginate @houses, theme: 'twitter-bootstrap-4' %>
</div>
<hr>
<div class="row">
  <% @houses.each do |house| %>
    <div class="col-sm-4">
      <div class="card house-card">
        <div class="embed-responsive embed-responsive-4by3">
        <img src="<%= house.photo_url %>" class="card-img-top embed-responsive-item" alt="...">
        </div>
        <div class="card-body">
          <h5 class="card-title center">House <%= house.id %></h5>
          <p class="card-text">Area: <%= house.area %> m<sup>2</sup></p>
          <p class="card-text">Price: <%= house.price_currency %></p>
          <div style="text-align: center">
            <%= link_to 'Details', house_path(house), class: 'btn btn-info' %>
            <% if current_owner == house.owner %>
            <%= link_to 'Edit', edit_house_path(house), class: 'btn btn-warning' %>
              <%= link_to "Delete", house, :method => :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-outline-danger' %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
