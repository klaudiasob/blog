<div class="center">
  <h2>My ads</h2>
</div>
<table class="table table-hover">
  <tbody>
  <% @houses.each do |house| %>
    <tr>
      <td>House <%= house.id %></td>
      <td><%= link_to 'Details', house_path(house), class: 'btn btn-info' %> </td>
      <% if house.deleted? %>
        <td>Deleted</td>
        <td><%= house.deleted_at %></td>
      <% else %>
        <td><%= link_to 'Edit', edit_house_path(house), class: 'btn btn-warning' %> </td>
        <td><%= button_to "Delete", house, :method => :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-outline-danger' %> </td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
