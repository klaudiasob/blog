<div class="center">
  <h3>Mailbox</h3>
</div>
<div class=”ui segment”>
  <div class=”ui list”>
    <div class=”item”>
      <% @conversations.each do |conversation| %>
        <% if conversation.sender_id == current_owner.id ||      conversation.recipient_id == current_owner.id %>
          <% if conversation.sender_id == current_owner.id %>
            <% recipient = Owner.find(conversation.recipient_id) %>
          <% else %>
            <% recipient = Owner.find(conversation.sender_id) %>
          <% end %>
          <div class=”header”><span style="margin-right: 20px"><%= recipient.first_name %> <%= recipient.last_name %></span>
          <%= link_to "Show messages", conversation_messages_path(conversation), class: "btn btn-outline-info btn-sm" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
